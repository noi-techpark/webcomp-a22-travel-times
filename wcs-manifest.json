  "searchTags": [],
  "dist": {
    "basePath": "dist/bundle/noi-a22-travel-times",
    "files": [
      "noi-a22-travel-times.js",
      "i18n_en.json",
      "i18n_it.json"
    ],
    "scripts": [
      {
        "file": "noi-a22-travel-times.js",
        "parameter": "type='module'"
      }
    ]
  },
  "configuration": {
    "tagName": "noi-a22-travel-times",
    "options": [
      {
        "key": "vehicle-type",
        "type": "select",
        "label": "Initial type of vehicle",
        "required": false,
        "options": {
          "values": [
            "light",
            "heavy"
          ],
          "default": "light"
        }
      },
      {
        "key": "layout",
        "type": "select",
        "label": "Layout appearance",
        "required": false,
        "options": {
          "values": [
            "desktop",
            "tablet",
            "mobile",
            "auto"
          ],
          "default": "auto"
        }
      },
      {
        "key": "language",
        "type": "select",
        "label": "Two letter key for the language to be used, if omitted the widget will use the browser language. Fallback is `en`",
        "required": false,
        "options": {
          "values": [
            "en",
            "it"
          ],
          "default": "en"
        }
      },
      {
        "key": "reload-interval",
        "type": "text",
        "label": "Data reload interval",
        "required": false,
        "options": {
          "default": "600000"
        }
      },
      {
        "key": "style",
        "type": "text",
        "label": "CSS style definition",
        "required": false,
        "options": {
          "default": "  --color-primary: #0068B4; --color-secondary: #00A767; --color-text: #6792AA; --color-background: #FFFFFF; --color-border: #0068B4; --color-footer: #0068b4; --color-footer-contrast: #FFFFFF; --color-busy-regular: #18a767; --color-busy-regular-contrast: #FFFFFF; --color-busy-light: #99d913; --color-busy-light-contrast: #FFFFFF; --color-busy-severe: #fab813; --color-busy-severe-contrast: #FFFFFF; --color-busy-heavy: #FF7F2C; --color-busy-heavy-contrast: #FFFFFF; --color-busy-critical: #f22139; --color-busy-critical-contrast: #FFFFFF; --color-busy-empty: #DDD; --color-busy-empty-contrast: #666; --color-car-light: var(--color-busy-regular); --color-car-heavy: var(--color-busy-heavy); --color-car-handle: #FFF; --scrollbar-color: initial; --scrollbar-bg: initial; --busy-box-size: 2.2em;"
        }
      }
    ]
  }
}
